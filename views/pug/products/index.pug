extends ../layouts/main

block content
    div.row
        div.col-12.mt-3
            h2 Productos registrados
            hr
            a(href="/productos/create" class="btn btn-outline-success btn-sm float-end") Crear producto
            table.table.table-striped.table-condensed
                thead
                    tr
                        th Producto
                        th Precio 
                        th Imagen 
                tbody 
                    each producto in productos 
                        tr 
                            td #{producto.title}
                            td $ #{producto.price}
                            td 
                                img(src=producto.thumbnail, class="img-thumbnail ancho-img-product", alt="imagen producto")
